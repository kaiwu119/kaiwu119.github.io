.post-header
  position: relative
  margin: 0 0 1.5rem
  font-size: 1em
  text-align: center

  .post-title
    display: inline-block
    margin: 0
    cursor: auto

    &-link
      clearAStyle()
      display: inline-block
      position: relative
      font-size: inherit
      word-wrap: break-word
      word-break: break-word
      color: $post-info-title-color
      cursor: pointer

      &::before
        content: ''
        visibility: hidden
        position: absolute
        bottom: 0
        left: 0
        width: 100%
        height: 2px
        background-color: #000
        transition-timing-function: ease
        transition-duration: .2s
        transform: scaleX(0)

      &:hover::before
        visibility: visible
        transform: scaleX(1)

